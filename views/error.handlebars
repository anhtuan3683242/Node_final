                    <p id="perror">Chi tiết thông báo lỗi
                    </p>
                        <h2>{{error.status}}</h2>
                        <pre>{{error.stack}}</pre>
                    <a href="/" class="btnerror btnerror-primary btnerror-round">Quay lại trang chủ</a>
                </div>
            </div>
        </div>
    </div>
